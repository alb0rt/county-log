<!-- views/pages/register.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ./head %>
</head>
<body class="container">

    <header>
        <% include ./header %>
    </header>

    <div class="container">
    	<div class="row">
    		<div class="col-sm-6 col-md-4 col-md-offset-4">
    			<h1 class="text-center login-title">New Account
    				<div class="signup-wall">
    					<% if(locals.message.length > 0) { %>
							<div class="text-center alert alert-danger" role="alert"><%= message %>
							</div>
						<% } %>
    					<form class="form-signin" action="/signup" method="POST">
    						<input type="text" name="username" class="form-control" placeholder="Username" required autofocus>
    						<input type="password" name="password" class="form-control" placeholder="Password" require>
    						<input type="email" name="email" class="form-control" placeholder="Email" required>
    						<button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
    						<span class="clearfix"></span>
						</form>
					</div>

	<% include ./footer %>

</body>
</html>
